# scm-server host interface
HOST=0.0.0.0

# scm-server port
PORT=8080

# home of scm-manager
#export SCM_HOME=/var/lib/scm
export SCM_HOME=/mnt/scm/Base

# force jvm path
# JAVA_HOME="/usr/lib/jvm/jre-11"

# increase memory
# EXTRA_JVM_ARGUMENTS="$EXTRA_JVM_ARGUMENTS -Xms1g -Xmx1g"

# pass extra jvm arguments
EXTRA_JVM_ARGUMENTS="$EXTRA_JVM_ARGUMENTS -Djetty.host=$HOST -Djetty.port=$PORT -Dscm.initialPassword=password"